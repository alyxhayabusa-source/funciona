                                </div>
                                <div class="skill-progress-text">@skill.Progress% de dominio</div>
                            </div>
                            <div class="skill-projects">
                                @foreach (var project in skill.Projects)
                                {
                                    <span class="skill-project">@project</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="skill-category">
                <div class="category-header">
                    <div class="category-icon">
                        <i class="bi bi-palette-fill"></i>
                    </div>
                    <div class="category-info">
                        <h3>Design & UX</h3>
                        <p>Diseño de interfaces y experiencia de usuario</p>
                    </div>
                </div>
                <div class="skills-list">
                    @foreach (var skill in designSkills)
                    {
                        <div class="skill-item">
                            <div class="skill-header">
                                <span class="skill-name">@skill.Name</span>
                                <span class="skill-level @skill.Level">@skill.Level</span>
                            </div>
                            <p class="skill-description">@skill.Description</p>
                            <div class="skill-progress">
                                <div class="progress">
                                    <div class="progress-bar @skill.Level" style="width: @skill.Progress%"></div>
                                </div>
                                <div class="skill-progress-text">@skill.Progress% de dominio</div>
                            </div>
                            <div class="skill-projects">
                                @foreach (var project in skill.Projects)
                                {
                                    <span class="skill-project">@project</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Skills Cloud -->
        <div class="skills-cloud-section">
            <h3 class="section-title">
                <i class="bi bi-cloud-fill me-2"></i>
                Nube de habilidades
            </h3>
            <div class="skills-cloud">
                @foreach (var skill in allSkillsCloud)
                {
                    <div class="skill-cloud-item @skill.Level" title="@skill.Experience años de experiencia">
                        <span class="skill-cloud-name">@skill.Name</span>
                        <span class="skill-cloud-experience">@skill.Experience</span>
                    </div>
                }
            </div>
        </div>

        <!-- Certifications -->
        <div class="certifications-section">
            <h3 class="section-title">
                <i class="bi bi-award-fill me-2"></i>
                Certificaciones
            </h3>
            <div class="certifications-grid">
                @foreach (var cert in certifications)
                {
                    <div class="certification-card">
                        <div class="cert-header">
                            <div class="cert-icon">
                                <i class="@cert.Icon"></i>
                            </div>
                            <div class="cert-info">
                                <h4>@cert.Title</h4>
                                <p>@cert.Issuer</p>
                            </div>
                        </div>
                        <div class="cert-details">
                            @cert.Description
                        </div>
                        <div class="cert-meta">
                            <span class="cert-date">@cert.IssueDate.ToString("MMMM yyyy")</span>
                            <span class="cert-credential">@cert.CredentialId</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

