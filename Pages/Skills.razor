@page "/skills"

<PageTitle>Skills - ProfileApp</PageTitle>

<div class="skills-page">
    <div class="container">
        <!-- Header Section -->
        <div class="page-header">
            <div class="header-content">
                <h1 class="page-title">
                    <i class="bi bi-gear-fill me-3"></i>
                    Habilidades
                </h1>
                <p class="page-description">
                    Tecnologías, herramientas y competencias que domino y utilizo en mis proyectos
                </p>
            </div>
        </div>

        <!-- Skills Statistics -->
        <div class="skills-stats">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-code-slash"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@totalSkills</div>
                    <div class="stat-label">Tecnologías</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-trophy-fill"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@expertSkills</div>
                            <div class="stat-label">Nivel experto</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-award-fill"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@certifications.Count</div>
                    <div class="stat-label">Certificaciones</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-calendar-check-fill"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@experienceYears</div>
                            <div class="stat-label">Años de experiencia</div>
                </div>
            </div>
        </div>

        <!-- Skills Categories -->
        <div class="skills-categories">
            <div class="skill-category">
                <div class="category-header">
                    <div class="category-icon">
                        <i class="bi bi-code-slash"></i>
                    </div>
                    <div class="category-info">
                        <h3>Frontend Development</h3>
                        <p>Interfaces de usuario modernas y responsivas</p>
                    </div>
                </div>
                <div class="skills-list">
                    @foreach (var skill in frontendSkills)
                    {
                        <div class="skill-item">
                            <div class="skill-header">
                                <span class="skill-name">@skill.Name</span>
                                <span class="skill-level @skill.Level">@skill.Level</span>
                            </div>
                            <p class="skill-description">@skill.Description</p>
                            <div class="skill-progress">
                                <div class="progress">
                                    <div class="progress-bar @skill.Level" style="width: @skill.Progress%"></div>
                                </div>
                                <div class="skill-progress-text">@skill.Progress% de dominio</div>
                            </div>
                            <div class="skill-projects">
                                @foreach (var project in skill.Projects)
                                {
                                    <span class="skill-project">@project</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="skill-category">
                <div class="category-header">
                    <div class="category-icon">
                        <i class="bi bi-server"></i>
                    </div>
                    <div class="category-info">
                        <h3>Backend Development</h3>
                        <p>APIs, bases de datos y arquitectura de servidores</p>
                    </div>
                </div>
                <div class="skills-list">
                    @foreach (var skill in backendSkills)
                    {
