@page "/projects"

<PageTitle>Projects - ProfileApp</PageTitle>

<div class="projects-page">
    <div class="container">
        <!-- Header Section -->
        <div class="page-header">
            <div class="header-content">
                <h1 class="page-title">
                    <i class="bi bi-folder-fill me-3"></i>
                    Mis Proyectos
                </h1>
                <p class="page-description">
                    Una colección de mis trabajos más destacados y proyectos en desarrollo
                </p>
            </div>
        </div>

        <!-- Stats Overview -->
        <div class="stats-overview">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@completedProjects</div>
                    <div class="stat-label">Completados</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-clock-fill"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@inProgressProjects</div>
                    <div class="stat-label">En Progreso</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-star-fill"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@featuredProjects</div>
                    <div class="stat-label">Destacados</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-github"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@totalCommits</div>
                    <div class="stat-label">Commits</div>
                </div>
            </div>
        </div>

        <!-- Featured Projects -->
        <div class="featured-section">
            <h3 class="section-title">
                <i class="bi bi-star-fill me-2"></i>
                Proyectos Destacados
            </h3>
            <div class="featured-grid">
                @foreach (var project in featuredProjectsList)
                {
                    <div class="featured-card @project.Category">
                        <div class="project-image">
                            <div class="project-overlay">
                                <div class="project-actions">
                                    <a href="#" class="action-btn" title="Ver Demo">
                                        <i class="bi bi-play-circle"></i>
                                    </a>
                                    <a href="#" class="action-btn" title="Ver Código">
                                        <i class="bi bi-github"></i>
                                    </a>
                                    <a href="#" class="action-btn" title="Más Info">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="project-badge">
                                <span class="badge badge-featured">@project.Category</span>
                            </div>
                        </div>
                        <div class="project-content">
                            <h4 class="project-title">@project.Title</h4>
                            <p class="project-description">@project.Description</p>
                            <div class="project-tech">
                                @foreach (var tech in project.Technologies)
                                {
                                    <span class="tech-tag">@tech</span>
                                }
                            </div>
                            <div class="project-stats">
                                <div class="project-stat">
                                    <i class="bi bi-github"></i>
                                    <span>@project.Stars stars</span>
                                </div>
                                <div class="project-stat">
                                    <i class="bi bi-eye"></i>
                                    <span>@project.Views views</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- All Projects Grid -->
        <div class="projects-section">
            <h3 class="section-title">
                <i class="bi bi-grid-3x3-gap-fill me-2"></i>
                Todos los Proyectos
            </h3>
            <div class="projects-grid">
                @foreach (var project in allProjects)
                {
                    <div class="project-card @project.Status">
                        <div class="card-header">
                            <div class="project-status">
                                <span class="status-badge @project.Status">@project.Status</span>
                            </div>
                            <div class="project-date">@project.CreatedDate.ToString("MMM yyyy")</div>
                        </div>
                        <div class="card-body">
                            <h5 class="project-name">@project.Title</h5>
                            <p class="project-summary">@project.Summary</p>
                            <div class="project-progress">
                                <div class="progress">
                                    <div class="progress-bar" style="width: @project.Progress%"></div>
                                </div>
                                <span class="progress-text">@project.Progress% completado</span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="project-tech-mini">
                                @foreach (var tech in project.Technologies.Take(3))
                                {
                                    <span class="tech-mini">@tech</span>
                                }
                                @if (project.Technologies.Count > 3)
                                {
                                    <span class="tech-more">+@(project.Technologies.Count - 3)</span>
                                }
                            </div>
                            <div class="project-actions-mini">
                                <a href="#" class="btn-mini" title="Ver Demo">
                                    <i class="bi bi-play"></i>
                                </a>
                                <a href="#" class="btn-mini" title="Ver Código">
                                    <i class="bi bi-github"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Skills Used -->
        <div class="skills-section">
            <h3 class="section-title">
                <i class="bi bi-tools me-2"></i>
                Tecnologías Utilizadas
            </h3>
            <div class="skills-cloud">
                @foreach (var skill in projectSkills)
                {
                    <div class="skill-item @skill.Level">
                        <span class="skill-name">@skill.Name</span>
                        <span class="skill-count">@skill.ProjectsCount</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

